<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/productNameTV"
        android:text="Product Name:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/seletedProductNameUpdateET"
        android:text="Product Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/productDescTV"
        android:text="Product Description:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/seletedProductDescriptionUpdateET"
        android:text="Product Description"
        android:inputType="textLongMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/productPriceTV"
        android:text="Product Price"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/seletedProductPriceUpdateET"
        android:text="Product Price"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/selectedImageUpdate"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/selectedProductUpdateBtn"
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
